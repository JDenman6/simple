<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet"/>
<%= javascript_include_tag params[:controller] %>
<%= stylesheet_link_tag params[:controller] %>

<nav id="top-menu" class="navbar navbar-default col-xs-12" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">James Denman</a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <li>
        <a href="#bio">Bio</a>
      </li>
      <li>
        <a href="#works">Works</a>
      </li>
      <li>
        <a href="#contact">Contact</a>
      </li>
    </ul>
  </div>

</nav>
<%= content_tag(:a, '', :id => 'bio') %>
<div id="nav-spacer"></div>

<% flash.each do |key, value| %>
  <h2 class="flash-message">
    <%= content_tag :div, value, class: "flash #{key}" %>
  </h2>
<% end %>

<div id="bio-section">
  <div id="bio-text">
    <br />
    <h1 class="text-primary short">Jimmy Denman</h1>
    <h3 class="text-muted">I love learning anything, building new things, fixing old things, and making new friends. Maybe we can do some of these things together.</h2>
    <hr />
    <h1 class="text-primary"> Web Developer & Writer</h1>
    <h3 class="text-muted">After a five-year career in tech journalism, where I wrote about software quality, I'm now ready to shift gears and start writing quality software.</h3>
    <br />
    <hr />
    <h1 class="text-primary text-center short">My story</h1>
    <h3 class="text-muted text-center">(the good parts version)</h3>
    <ul>
      <li class="text-primary"><h4>Born between Christmas and New Years, 1983</h4></li>
      <li class="text-primary"><h4>Graduated SUNY Orange 2005 and SUNY Binghamton 2007</h4></li>
      <li class="text-primary"><h4>Worked up from data-entry to site editor of SearchSoftwareQuality.com</h4></li>
      <li class="text-primary"><h4>Decided to make the shift from writing about software development to actually developing software in 2015</h4></li>
    </ul>
  </div>
  <%= content_tag(:a, '', :id => 'works') %>
</div>


<div id="works-section">
  <div class="row links-row">
    <div class="col-xs-4"></div>
    <div class="col-xs-2 square">
      <%= link_to image_tag("QubedSpaceSquare.png", :class => "img-responsive"),
        "https://qubed-space-zero-zero.herokuapp.com" %>
    </div>
    <div class="col-xs-2 square">
      <%= link_to image_tag("SleepyOceanSquare.png", :class => "img-responsive"),
        "https://sleepy-ocean-8398.herokuapp.com" %>
    </div>
    <div class="col-xs-2 square">
      <%= link_to image_tag("SimonSquare.png", :class => "img-responsive"),
        "http://codepen.io/JDenman6/full/WxzWqw" %>
    </div>
    <div class="col-xs-2 square">
      <%= link_to image_tag("WeddingSiteSquare.png", :class => "img-responsive"),
        "https://quiet-cliffs-5203.herokuapp.com" %>
    </div>
  </div>
  <div class="row"></div>
  <%= content_tag(:a, '', :id => 'contact') %>
</div>



<div id="contact-section">
  <div id="contact-form">
    <div>
      <h3>Get in touch!</h3>
      <% @contact = Contact.new %>
      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <%= f.input :name, :required => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :message, :as => :text, :required => true %>
        <div class= "hidden">
          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>
        <div>
          </br>
          <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="btn-group pull-right bottom" role="socialMediaButtons" aria-label="Social Buttons">
    <a role="button" class="btn btn-primary" href="https://twitter.com/TimmidJimmid" target="_blank">Twitter</a>
    <a role="button" class="btn btn-primary" href="https://www.facebook.com/jimmy.denman.5" target="_blank">facebook</a>
    <a role="button" class="btn btn-primary" href="https://www.linkedin.com/in/james-denman-34b15623" target="_blank">LinkedIn</a>
  </div>
</div>
